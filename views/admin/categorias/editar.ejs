<%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>

        <body>
            <div class="container">
                <div class="card">
                    <div class="card-header">
                        <h3>Edição de categoria</h3>
                    </div>
                    <div class="card-body">
                        <% categoria.forEach(c => {%>
                            <form action="/categoria/atualizar" method="post">
                                <input type="text" name="titulo" placeholder="Defina o titulo da categoria" class="form-control" value="<%= c.titulo %>"><br>
                                <input type="hidden" name="id_categoria" value="<%= c.id_categoria %>"><br>
                                <input type="submit" value="Atualizar" class="btn btn-success">
                            </form>
                            <% }) %>
                    </div>
                </div>

            </div>
        </body>
        <%- include('../../partials/footer') %>